<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

<androidx.cardview.widget.CardView
    style="@style/MyCardViewForEmploy"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:id="@+id/cardViewForFoodItem"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="40dp"
    android:layout_width="match_parent"
    android:layout_height="400dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/child_cardView"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/imagefff"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="22sp"
            android:textColor="@color/text_color_white"
            android:layout_marginTop="20dp"
            android:id="@+id/foodItemName"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_below="@id/foodItemName"
            android:layout_alignStart="@id/foodItemName"
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:id="@+id/foodItemPrice"
            android:textColor="@color/text_color_white"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:id="@+id/foodItemDis"
            android:layout_marginBottom="10dp"
            android:textColor="@color/text_color_white"
            android:layout_alignStart="@id/foodItemName"
            android:layout_above="@id/linearLayout_row_admin_food"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/linearLayout_row_admin_food"
            android:layout_alignStart="@id/foodItemName"
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:text="Update"
            android:textSize="20sp"
            android:layout_marginEnd="15dp"
            android:textAllCaps="false"
            android:background="@drawable/actionbar_background"
            android:textColor="@color/button_color_black1"
            android:theme="@style/buttonYellow"
            android:id="@+id/foodItemEdit"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="0dp"
            android:text="Remove!"
            android:layout_weight="2"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_marginEnd="30dp"
            android:background="@drawable/actionbar_background"
            android:textColor="@color/button_color_black1"
            android:theme="@style/buttonYellow"
            android:id="@+id/foodItemDelete"
            android:layout_height="wrap_content"/>
        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>

</LinearLayout>