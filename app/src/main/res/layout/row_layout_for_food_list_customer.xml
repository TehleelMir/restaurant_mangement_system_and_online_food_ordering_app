<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <androidx.cardview.widget.CardView
        style="@style/MyCardViewForEmploy"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/cardViewForFoodItem_customer"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="40dp"
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/child_cardView_customer"
            android:layout_height="match_parent">

<!--            <ImageView-->
<!--                android:layout_width="50dp"-->
<!--                android:src="@drawable/ic_star__1_"-->
<!--                android:layout_marginTop="25dp"-->
<!--                android:layout_marginEnd="25dp"-->
<!--                android:layout_alignParentRight="true"-->
<!--                android:layout_height="50dp"/>-->

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/imagefff_customer"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginStart="20dp"
                android:textSize="22sp"
                android:textColor="@color/text_color_white"
                android:layout_marginTop="20dp"
                android:id="@+id/foodItemName_customer"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_below="@id/foodItemName_customer"
                android:layout_alignStart="@id/foodItemName_customer"
                android:layout_width="wrap_content"
                android:textSize="22sp"
                android:id="@+id/foodItemPrice_customer"
                android:textColor="@color/text_color_white"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="22sp"
                android:id="@+id/foodItemDis_customer"
                android:layout_marginBottom="10dp"
                android:textColor="@color/text_color_white"
                android:layout_alignStart="@id/foodItemName_customer"
                android:layout_above="@id/linearLayout_row_admin_food"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/linearLayout_row_admin_food"
                android:layout_alignStart="@id/foodItemName_customer"
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_marginEnd="15dp"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="-"
                        android:textSize="25dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@+id/minusButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_weight="1"
                        android:text="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:layout_width="0dp"
                        android:id="@+id/numberOfItemsTV"
                        android:textSize="25dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="+"
                        android:textSize="25dp"
                        android:id="@+id/plusButton"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <Button
                    android:layout_width="0dp"
                    android:text="Add to busket"
                    android:layout_weight="2"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/actionbar_background"
                    android:textColor="@color/button_color_black1"
                    android:theme="@style/buttonYellow"
                    android:id="@+id/addToBusketButton"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>












